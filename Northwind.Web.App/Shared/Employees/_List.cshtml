<table class="table table-striped table-bordered">
    <thead>
        <tr>
                <th>Id</th>
                <th>LastName</th>
                <th>FirstName</th>
                <th>Title</th>
                <th>Address</th>
                <th>HomePhone</th>
                <th>Extension</th>
                <th>Manager</th>
            <th></th>
        </tr>
    </thead>
    <tbody data-bind="foreach: Employees">
        <tr>
            <td data-bind="text: Id"></td>
            <td data-bind="text: LastName"></td>
            <td data-bind="text: FirstName"></td>
            <td data-bind="text: Title"></td>
            <td data-bind="text: Address.Street"></td>
            <td data-bind="text: HomePhone"></td>
            <td data-bind="text: Extension"></td>
            <td data-bind="text: ManagerFirstName"></td>
            <td class="nowrap">
                <a class="btn" 
					title="View Employee"
                    data-template="ViewEmployee" 
                    data-bind="attr: { 'data-id': Id(), href: '#!/' + Id() }"
                    data-toggle="modal"
                    data-target="#modal"><i class="icon-eye-open"></i></a>
                <a class="btn btn-primary" 
					title="Edit Employee"
                    data-template="EditEmployee" 
                    data-bind="attr: { 'data-id': Id(), href: '#!/Edit/' + Id() }"
                    data-toggle="modal"
                    data-target="#modal"><i class="icon-edit icon-white"></i></a>
                <a class="btn btn-danger" 
					title="Delete Employee"
                    data-template="DeleteEmployee" 
                    data-bind="attr: { 'data-id': Id(), href: '#!/Delete/' + Id() }"
                    data-toggle="modal"
                    data-target="#modal"><i class="icon-trash icon-white"></i></a>
            </td>
        </tr>
    </tbody>
	<tfoot>
		<tr>
			<td colspan="8"></td>
			<td>
				<a class="btn" 
					href="#!/Add"
					title="Add Employee"
					data-template="AddEmployee" 
					data-toggle="modal"
					data-target="#modal"
					data-item="@Json.Encode(new EmployeeModel())"><i class="icon-plus"></i> Add Employee</a>
			</td>
		</tr>
	</tfoot>
</table>
