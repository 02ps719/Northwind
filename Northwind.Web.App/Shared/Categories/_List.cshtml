<table class="table table-striped table-bordered">
    <thead>
        <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody data-bind="foreach: Categories">
        <tr>
            <td data-bind="text: Id"></td>
            <td data-bind="text: Name"></td>
            <td data-bind="text: Description"></td>
            <td class="nowrap">
                <a class="btn" 
					title="View Category"
                    data-template="ViewCategory" 
                    data-bind="attr: { 'data-id': Id(), href: '#!/' + Id() }"
                    data-toggle="modal"
                    data-target="#modal"><i class="icon-eye-open"></i></a>
                <a class="btn btn-primary" 
					title="Edit Category"
                    data-template="EditCategory" 
                    data-bind="attr: { 'data-id': Id(), href: '#!/Edit/' + Id() }"
                    data-toggle="modal"
                    data-target="#modal"><i class="icon-edit icon-white"></i></a>
                <a class="btn btn-danger" 
					title="Delete Category"
                    data-template="DeleteCategory" 
                    data-bind="attr: { 'data-id': Id(), href: '#!/Delete/' + Id() }"
                    data-toggle="modal"
                    data-target="#modal"><i class="icon-trash icon-white"></i></a>
            </td>
        </tr>
    </tbody>
	<tfoot>
		<tr>
			<td colspan="3"></td>
			<td>
				<a class="btn" 
					href="#!/Add"
					title="Add Category"
					data-template="AddCategory" 
					data-toggle="modal"
					data-target="#modal"
					data-item="@Json.Encode(new CategoryModel())"><i class="icon-plus"></i> Add Category</a>
			</td>
		</tr>
	</tfoot>
</table>
