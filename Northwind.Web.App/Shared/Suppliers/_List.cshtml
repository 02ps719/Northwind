<table class="table table-striped table-bordered">
    <thead>
        <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Contact</th>
                <th>Phone</th>
                <th>Fax</th>
            <th></th>
        </tr>
    </thead>
    <tbody data-bind="foreach: Suppliers">
        <tr>
            <td data-bind="text: Id"></td>
            <td data-bind="text: Name"></td>
            <td>
                <span data-bind="text: Contact.Name"></span><br />
                <span data-bind="text: Contact.Address.Street"></span>, 
                <span data-bind="text: Contact.Address.City"></span>, 
                <span data-bind="text: Contact.Address.Country"></span>
            </td>
            <td data-bind="text: Contact.Phone"></td>
            <td data-bind="text: Contact.Fax"></td>
            <td class="nowrap">
                <a class="btn" 
					title="View Supplier"
                    data-template="ViewSupplier" 
                    data-bind="attr: { 'data-id': Id(), href: '#!/' + Id() }"
                    data-toggle="modal"
                    data-target="#modal"><i class="icon-eye-open"></i></a>
                <a class="btn btn-primary" 
					title="Edit Supplier"
                    data-template="EditSupplier" 
                    data-bind="attr: { 'data-id': Id(), href: '#!/Edit/' + Id() }"
                    data-toggle="modal"
                    data-target="#modal"><i class="icon-edit icon-white"></i></a>
                <a class="btn btn-danger" 
					title="Delete Supplier"
                    data-template="DeleteSupplier" 
                    data-bind="attr: { 'data-id': Id(), href: '#!/Delete/' + Id() }"
                    data-toggle="modal"
                    data-target="#modal"><i class="icon-trash icon-white"></i></a>
            </td>
        </tr>
    </tbody>
	<tfoot>
		<tr>
			<td colspan="5"></td>
			<td>
				<a class="btn" 
					href="#!/Add"
					title="Add Supplier"
					data-template="AddSupplier" 
					data-toggle="modal"
					data-target="#modal"
					data-item="@Json.Encode(new SupplierModel())"><i class="icon-plus"></i> Add Supplier</a>
			</td>
		</tr>
	</tfoot>
</table>
