@{  
    Page.Title = "Categories";
    Page.ApiController = "Categories";
	Page.Count = new CategoriesController().Get().Count();
}

<div class="row">
	@RenderPage("~/Shared/_Pagination.cshtml")
    <h1>Categories</h1>
	@RenderPage("~/Shared/Categories/_List.cshtml")
</div>

@section scripts {
<script id="AddCategory" type="text/html">
    @RenderPage("~/Shared/Categories/_Add.cshtml")
</script>
<script id="ViewCategory" type="text/html">
    @RenderPage("~/Shared/Categories/_Display.cshtml")
</script>
<script id="EditCategory" type="text/html">
    @RenderPage("~/Shared/Categories/_Edit.cshtml")
</script>
<script id="DeleteCategory" type="text/html">
	<div class="alert  alert-block alert-danger">
	  <strong>Warning!</strong> You are about to delete Category: <strong data-bind="text: Id"></strong>. Are you sure?
	</div>    
	<form method="delete" class="form-horizontal" data-bind="attr: { action: '@Url.ApiUrl("Categories")' + '/' + Id() }">
	</form>
</script>
}
